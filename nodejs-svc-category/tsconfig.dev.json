{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "sourceMap": true,                       
    "outDir": "./dist",                       
    "strict": true,                           
    "noImplicitAny": true,                    
    "moduleResolution": "node",               
    "baseUrl": "./src",                       
    "paths": {
      "*": [
          "./src"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
